
@{
    ViewData["Title"] = "Play List";
}

<h1>Play List</h1>

@model IEnumerable<Track>

<div class="row">
    @foreach (Track item in Model)
    {
        <div class="col-2">
            <div class="card h-75">
                <div class="img-container">
                    @if (item.AlbumDb != null && item.ArtistDb != null)
                    {
                        <div class="img-blur" style="background-image:url(@item.Cover_medium)"></div>
                        <img src="@item.Cover_medium" class="card-img-top" alt="..." />
                    }
                </div>
                <form asp-controller="Music" asp-action="DeleteTrack" method="post" asp-route-id="@item.Id" class="col m-0">
                    <button class="border-0 btn-transition btn btn-outline-danger">
                        <i class="fa fa-trash"></i>
                    </button>
                </form>
            </div>
        </div>
        <div class="card-body">
            @if (@item.ArtistDb != null && item.ArtistDb != null)
            {
                <h5 class="card-title">@item.ArtistDb.Name</h5>
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text">Album: @item.AlbumDb.Title</p>
                <audio id="myAudioTrack" src="@item.Preview" controls style="width: 250px"></audio>
                
            }
           
        </div>
    }
</div>